@model IEnumerable<LICSE_Inventarios.Models.PROVEEDOR>

@{
    ViewBag.Title = "Proveedores";
}

<div class="top-bar proveedores">
    <h1>Proveedores</h1>
    <p>Home. / Proveedores</p>
</div>
<!-- end top bar -->
<!-- main container -->
<div class="main-container portfolio-inner clearfix">
    <!-- portfolio div -->
    <div class="portfolio-div">
        <div class="portfolio">
            <!-- portfolio_filter -->
            <div class="categories-grid wow fadeInLeft">
                <nav class="categories text-center">
                    <ul class="">
                        <li><a href="" class="active">Lista</a></li>
                        <li><p>@Html.ActionLink("Registrar", "Create", "PROVEEDORES")</p></li>
                    </ul>
                </nav>
            </div>
            <!-- portfolio_filter -->
            <!-- portfolio_container -->
            <div class="container">
                <!-- single work -->
                <div class="row">
                    <div class="col-sm-4-1 offset-md-1-1 py-4 border-op fashion logo">

                        <table class="table">
                            <tr>
                                <th>
                                    <p>Nombre</p>
                                </th>
                                <th>
                                    <p>Telefono</p>
                                </th>
                                <th>
                                    <p>Correo</p>
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pro_nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pro_telefono)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pro_correo)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { id = item.id_proveedor }) |
                                        @Html.ActionLink("Detalles", "Details", new { id = item.id_proveedor }) |
                                         @Html.ActionLink("Eliminar", "Delete", new { id = item.id_proveedor })
                                    </td>
                                </tr>
                            }

                        </table>

                    </div>
                </div>

                <!-- end single work -->

            </div>
            <!-- end portfolio_container -->
        </div>
        <!-- portfolio -->
    </div>
    <!-- end portfolio div -->
</div>




