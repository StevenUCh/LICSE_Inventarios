@model LICSE_Inventarios.Models.PROVEEDOR

@{
    ViewBag.Title = "Edit";
}


<div class="top-bar proveedores">
    <h1>Proveedores</h1>
    <p>Home. / Proveedores</p>
</div>
<!-- end top bar -->
<!-- main container -->
<div class="main-container portfolio-inner clearfix">
    <!-- portfolio div -->
    <div class="portfolio-div">
        <div class="portfolio">
            <!-- portfolio_filter -->
            <div class="categories-grid wow fadeInLeft">
                <nav class="categories text-center">
                    <ul class="portfolio_filter">
                        <li>@Html.ActionLink("Lista", "Index")</li>
                        <li><p>@Html.ActionLink("Registrar", "Create")</p></li>
                        <li><a href="" class="active">Editar</a></li>
                    </ul>
                </nav>
            </div>
            <!-- portfolio_filter -->
            <!-- portfolio_container -->
            <div class="container">
                <!-- single work -->
                <div class="row">
                    <div class="col-sm-4-1 offset-md-1-1 py-4 border-op fashion logo">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4>PROVEEDOR</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.id_proveedor)

                                <div class="form-group">
                                    @Html.LabelFor(model => model.pro_nombre, "Nombre",htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.pro_nombre, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.pro_nombre, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.pro_telefono, "Telefono",htmlAttributes: new { @class = "control-label col-md-2" });
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.pro_telefono, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.pro_telefono, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.pro_correo, "Correo",htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.pro_correo, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.pro_correo, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Guardar" class="btn btn-default" />
                                        @Html.ActionLink("Cancelar", "Index", "Cancelar", htmlAttributes: new { @class = "btn btn-default" })
                                    </div>
                                </div>
                            </div>
                        }

                        <div>

                        </div>



                    </div>
                </div>

                <!-- end single work -->


            </div>
            <!-- end portfolio_container -->
        </div>
        <!-- portfolio -->
    </div>
    <!-- end portfolio div -->
</div>


