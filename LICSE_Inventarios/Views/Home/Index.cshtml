@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- box header -->
    <header class="box-header">
        <div class="box-logo">
            <a href="index.html"><img src="~/Content/img/portfolio/logo.png" width="150" alt="Logo"></a>
        </div>
        <!-- box-nav -->
        <a class="box-primary-nav-trigger" href="#0">
            <span class="box-menu-text">Menu</span><span class="box-menu-icon"></span>
        </a>
        <!-- box-primary-nav-trigger -->
    </header>
    <!-- end box header -->
    <!-- nav -->
    <nav>
        <ul class="box-primary-nav">

            <li>@Html.ActionLink("Contacto","contact","home")</li>

        </ul>
    </nav>
    <!-- end nav -->
    <!-- box-intro -->
    <section class="box-intro">
        <div class="table-cell">
            <h1 class="box-headline letters rotate-2">
                <span class="box-words-wrapper">
                    <b class="is-visible">LICSE.</b>
                    <!-- <b>&nbsp;coding.</b> -->
                    <b>Inventarios.</b>
                </span>
            </h1>
            <h5>La mejor solucion para la optimizacion de procesos.</h5>
        </div>

        <div class="mouse">
            <a href="@Url.Action("Login","Home")"><div class="scroll">ACCEDER</div></a>
        </div>
    </section>
    <!-- end box-intro -->
</div>


