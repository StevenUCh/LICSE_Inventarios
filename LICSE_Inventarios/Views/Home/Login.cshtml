
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}    

    <div id="preloader">
        <div class="pre-container">
            <div class="spinner">
                <div class="double-bounce1"></div>
                <div class="double-bounce2"></div>
            </div>
            <div class="limiter">    </div>
        </div>


        <div class="limiter">
            <div class="container-login100">
                <div class="login100-more" style="background-image: url('../../Content/Login/images/bg-01.jpg');"></div>

                <div class="wrap-login100 p-l-50 p-r-50 p-t-72 p-b-50">
                    <form class="login100-form validate-form" action="@Url.Content("~/home/login")" method="post">
                        <span class="login100-form-title p-b-59">
                            ACCEDER
                        </span>

                        <div class="wrap-input100 validate-input" data-validate="Usuario requerido">
                            <span class="label-input100">Usuario</span>
                            <input class="input100" type="number" name="username" placeholder="Usuario..." required>
                            <span class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Contraseña requerido">
                            <span class="label-input100">Contraseña</span>
                            <input class="input100" type="password" name="pass" placeholder="*************" required>
                            <span class="focus-input100"></span>
                        </div>

                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <button class="login100-form-btn">
                                    Ingresar
                                </button>
                            </div>

                            <a href="@Url.Action("Index", "Home")" class="dis-block txt3 hov1 p-r-30 p-t-10 p-b-10 p-l-30">
                                Volver
                                <i class="fa fa-long-arrow-right m-l-5"></i>
                            </a>
                        </div>
                    </form>

                    <div class="col-md-12">
                        <br />
                        <br />
                    </div>
                    @if (@ViewBag.Error != null)
                    {
                        <div class="col-md-12">
                            <div class="alert alert-danger alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                                <h4><i class="icon fa fa-warning"></i> Alerta!</h4><br/>
                                @ViewBag.Error
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

     </div>   

