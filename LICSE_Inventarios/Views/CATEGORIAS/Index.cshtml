@model IEnumerable<LICSE_Inventarios.Models.CATEGORIA>

@{
    ViewBag.Title = "Categorias";
}

<!-- top bar -->
<div class="top-bar solicitudes">
    <h1>Categorias</h1>
    <p>Home. / Categorias</p>
</div>
<!-- end top bar -->
<!-- main container -->
<div class="main-container portfolio-inner clearfix">
    <!-- portfolio div -->
    <div class="portfolio-div">
        <div class="portfolio">
            <!-- portfolio_filter -->
            <div class="categories-grid wow fadeInLeft">
                <nav class="categories text-center">
                    <ul>
                        <li><a href="" class="active">Lista</a></li>
                        <li>@Html.ActionLink("Registrar", "Create")</li>

                    </ul>
                </nav>
            </div>
            <!-- portfolio_filter -->
            <!-- portfolio_container -->
            <div class="container">
                <!-- single work -->
                <div class="row">
                    <div class="col-sm-4-1 offset-md-1-1 py-4 border-op  fashion logo">

                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.nombre)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.id_categoria }) |
                            @Html.ActionLink("Detalles", "Details", new { id = item.id_categoria }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.id_categoria })
                        </td>
                    </tr>}

                        </table>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                @Html.ActionLink("Volver", "Inicio", "", htmlAttributes: new { @class = "btn btn-default" })
                            </div>
                        </div>

                    </div>
                    <!-- end single work -->
                </div>

            </div>
            <!-- end portfolio_container -->
        </div>
        <!-- portfolio -->
    </div>
    <!-- end portfolio div -->
</div>
<!-- end main container -->
<!-- end main container -->
