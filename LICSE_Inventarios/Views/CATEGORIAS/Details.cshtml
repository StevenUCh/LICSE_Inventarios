@model LICSE_Inventarios.Models.CATEGORIA

@{
    ViewBag.Title = "Detalle categoria";
}


<div class="top-bar categoria">
    <h1>Categoria</h1>
    <p>Home. / Categoria</p>
</div>
<!-- end top bar -->
<!-- main container -->
<div class="main-container portfolio-inner clearfix">
    <!-- portfolio div -->
    <div class="portfolio-div">
        <div class="portfolio">
            <!-- portfolio_filter -->
            <div class="categories-grid wow fadeInLeft">
                <nav class="categories text-center">
                    <ul>
                        <li>
                            @Html.ActionLink("Lista", "Index")
                        </li>
                        <li>@Html.ActionLink("Registrar", "Create")</li>
                        <li><a href="" class="active" data-filter=".logo">Detalle</a></li>
                        <li>@Html.ActionLink("Editar", "Edit", new { id = Model.ID_CATEGORIA })</li>

                    </ul>
                </nav>
            </div>
            <!-- portfolio_filter -->
            <!-- portfolio_container -->
            <div class="container">


                <div class="col-md-4 col-sm-12 photography">

                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.nombre)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.nombre)
                            </dd>

                        </dl>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            @Html.ActionLink("Volver", "Index", "Cancelar", htmlAttributes: new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>


            </div>
            <!-- end portfolio_container -->
        </div>
        <!-- portfolio -->
    </div>
    <!-- end portfolio div -->
</div>
<!-- end main container -->
