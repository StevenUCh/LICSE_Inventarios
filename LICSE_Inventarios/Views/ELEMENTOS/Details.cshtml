@model LICSE_Inventarios.Models.ELEMENTO

@@{
    ViewBag.Title = "Details";

}

div class="top-bar elementos">
<h1>Elementos</h1>
<p>Home. / Elementos</p>
    </div>
<!-- end top bar -->
<!-- main container -->
<div class="main-container portfolio-inner clearfix">
    <!-- portfolio div -->
    <div class="portfolio-div">
        <div class="portfolio">
            <!-- portfolio_filter -->
            <div class="categories-grid wow fadeInLeft">
                <nav class="categories text-center">
                    <ul>
                        <li>
                            @Html.ActionLink("Lista", "Index")
                        </li>
                        <li>@Html.ActionLink("Registrar", "Create")</li>
                        <li><a href="" class="active" data-filter=".logo">Detalle</a></li>
                        <li>@Html.ActionLink("Editar", "Edit", new { id = Model.id_elem })</li>

                    </ul>
                </nav>
            </div>
            <!-- portfolio_filter -->
            <!-- portfolio_container -->
            <div class="container">


                <div class="col-md-4 col-sm-12 photography">



                    <div>

                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.LabelFor(model => model.elem_ref, "Referencia")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.elem_ref)
                            </dd>

                            <dt>
                                @Html.LabelFor(model => model.elem_nom, "Nombre")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.elem_nom)
                            </dd>

                            <dt>
                                @Html.LabelFor(model => model.CATEGORIA1.nombre, "Categoria")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.CATEGORIA1.nombre)
                            </dd>

                            <dt>
                                @Html.LabelFor(model => model.PROVEEDOR1.pro_nombre, "Proveedor")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.PROVEEDOR1.pro_nombre)
                            </dd>

                        </dl>
                    </div>
                    <p>
                        |
                    </p>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            @Html.ActionLink("Volver", "Index", "", htmlAttributes: new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>


            </div>
            <!-- end portfolio_container -->
        </div>
        <!-- portfolio -->
    </div>
    <!-- end portfolio div -->
</div>
<!-- end main container -->
