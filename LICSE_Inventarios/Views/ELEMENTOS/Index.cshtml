@model IEnumerable<LICSE_Inventarios.Models.ELEMENTO>

@{
    ViewBag.Title = "Index";
}
<div class="top-bar elementos">
    <h1>Elementos</h1>
    <p>Home. / Elementos</p>
</div>
<!-- end top bar -->
<!-- main container -->
<div class="main-container portfolio-inner clearfix">
    <!-- portfolio div -->
    <div class="portfolio-div">
        <div class="portfolio">
            <!-- portfolio_filter -->
            <div class="categories-grid wow fadeInLeft">
                <nav class="categories text-center">
                    <ul>
                        <li><a  class="active">Lista</a></li>
                        <li>@Html.ActionLink("Registrar entrada", "Create","Entradas")</li>
                        <li>@Html.ActionLink("Registrar elemento", "Create")</li>
                        <li>@Html.ActionLink("Stock", "index", "Stocks")</li> @*OPcion de stock*@

                    </ul>
                </nav>
            </div>
            <!-- portfolio_filter -->
            <!-- portfolio_container -->
            <div class="container">
                <!-- single work -->
                <div class="row">
                    <div class="col-sm-4-1 offset-md-1-1 py-4 border-op fashion logo">


                        <table class="table">
                            <tr>
                                <th>
                                    <p>Referencia</p>
                                    @*@Html.DisplayNameFor(model => model.elem_ref)*@
                                </th>
                                <th>
                                    <p>Nombre</p>
                                    @*@Html.DisplayNameFor(model => model.elem_nom)*@
                                </th>
                                <th>
                                    <p>Categoria</p>
                                    @*@Html.DisplayNameFor(model => model.CATEGORIA1.nombre)*@
                                </th>
                                <th>
                                    <p>Proveedor</p>
                                    @*@Html.DisplayNameFor(model => model.PROVEEDOR1.pro_nombre)*@
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.elem_ref)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.elem_nom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CATEGORIA1.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PROVEEDOR1.pro_nombre)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.id_elem }) |
                            @Html.ActionLink("Detalles", "Details", new { id = item.id_elem }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.id_elem })
                        </td>
                    </tr>}

                        </table>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                @Html.ActionLink("Volver", "Inicio", "", htmlAttributes: new { @class = "btn btn-default" })
                            </div>
                        </div>
                    </div>

                </div>


            </div>
            <!-- end portfolio_container -->
        </div>
        <!-- portfolio -->
    </div>
    <!-- end portfolio div -->
</div>
<!-- end main container -->
